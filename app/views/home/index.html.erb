<h1>Microblog ... It's Like Twitter, but a Really Long Way from Not</h1>
<% @entries.each do |entry| %>
    <div class='row-fluid'>
      <div class='span5'>
        <div class='well'>
          <div class='pull-left'>
          </div>
          <div class='pull-right'>
            <%= entry.user.username %>
          </div>
          <br />
          <br />
          <%= entry.post %>
        </div>
      </div>
    </div>
<% end %>